<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - ToDo</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex flex-col min-h-screen font-sans">

    <%- include('header', { username: username }) %>

        <main class="flex-grow mb-5">
            <div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-2xl shadow-lg transition hover:shadow-xl">

                <h2 class="text-2xl font-extrabold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="text-blue-600">üìù</span> Your Todo List
                </h2>

                <form action="/todo/add-task" method="POST" onsubmit="return validateTask()" class="flex mb-6 rounded-lg overflow-hidden border focus-within:ring-2 focus-within:ring-blue-400">
                    <input type="text" id="taskInput" name="task" placeholder="Enter new task..." class="flex-1 px-4 py-3 outline-none" required>
                    <button type="submit" class="bg-blue-600 text-white px-6 font-semibold hover:bg-blue-700 transition">
        Add
    </button>
                </form>




                <ul class="space-y-4">
                    <% if (todo.length === 0) { %>
                        <p class="text-gray-500 text-center italic">No tasks yet.</p>
                        <% } else { %>
                            <% todo.forEach(function(todo){ %>
                                <% if (todo.createdBy === username) { %>
                                    <li class="flex justify-between items-center bg-gray-50 p-4 rounded-lg border hover:shadow-md transition">

                                        <div>
                                            <p class="font-medium text-lg <%= todo.isCompleted ? 'line-through text-gray-500' : 'text-gray-800' %>">
                                                <%= todo.task %>
                                            </p>
                                            <% if (todo.isCompleted) { %>
                                                <span class="text-green-600 text-sm font-semibold">Completed</span>
                                                <% } else { %>
                                                    <span class="text-yellow-600 text-sm font-semibold">Pending</span>
                                                    <% } %>
                                        </div>

                                        <div class="flex space-x-3">
                                            <form action="/todo/update-task/<%= todo.id %>" method="get">
                                                <button type="submit" class="px-3 py-1 text-sm font-semibold rounded-lg transition 
                                <%= todo.isCompleted 
                                    ? 'bg-green-600 hover:bg-green-700 text-white' 
                                    : 'bg-yellow-500 hover:bg-yellow-600 text-white' %>">
                                <%= todo.isCompleted ? 'Mark Pending' : 'Mark Completed' %>
                            </button>
                                            </form>

                                            <form action="/todo/delete-task/<%= todo.id %>" method="get">
                                                <button type="submit" onclick="return confirm('Delete this task?')" class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition">
                                Delete
                            </button>
                                            </form>
                                        </div>
                                    </li>
                                    <% } %>
                                        <% }) %>
                                            <% } %>
                </ul>

            </div>
        </main>

        <%- include('footer') %>
            <script>
                function validateTask() {
                    let input = document.getElementById("taskInput");
                    input.value = input.value.trim();
                    if (input.value === "") {
                        alert("Task cannot be empty!");
                        return false;
                    }
                    return true;
                }
            </script>
</body>

</html>