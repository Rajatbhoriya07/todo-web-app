<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex justify-center items-center h-screen">

    <!-- Login Card -->
    <div class="bg-white shadow-lg rounded-xl p-8 w-96">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Login</h2>

        <!-- Login Form -->
        <form action="/auth/login" method="POST" class="space-y-4">

            <!-- Username -->
            <div>
                <label class="block text-gray-600 font-medium">Username</label>
                <input type="text" name="username" placeholder="Enter username" class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none" required>
            </div>

            <!-- Password -->
            <div>
                <label class="block text-gray-600 font-medium">Password</label>
                <input type="password" name="password" placeholder="Enter password" class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none" required>
            </div>

            <!-- Submit -->
            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition duration-200">
                Login
            </button>
        </form>

        <!-- Forgot Password -->
        <div class="mt-3 text-right">
            <a href="/auth/forgot-password" class="text-sm text-blue-600 hover:underline">Forgot Password?</a>
        </div>

        <!-- Error or Success Messages -->
        <% if (typeof error !== 'undefined' && error) { %>
            <p class="mt-3 px-3 py-2 rounded-lg border text-sm font-medium
             text-red-700 bg-red-50 border-red-300">
                <%= error %>
            </p>
            <% } else if (typeof success !== 'undefined' && success) { %>
                <p id="success-msg" class="mt-3 px-3 py-2 rounded-lg border text-sm font-medium
             text-green-700 bg-green-50 border-green-300">
                    <%= success %>
                </p>
                <script>
                    setTimeout(() => {
                        window.location.href = "/home";
                    }, 1000);
                </script>
                <% } %>

                    <p class="text-sm text-center text-gray-500 mt-4">
                        Donâ€™t have an account?
                        <a href="/auth/signup" class="text-blue-600 hover:underline">Sign up</a>
                    </p>
    </div>

</body>

</html>